@model Rompecabezas.Logica.Models.Sala
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<form method="post" asp-action="Crear" asp-controller="Sala" class="row">
    
    <!--Nickname-->
    <div class="form-group-0">
        <label asp-for="@Model.NickName" class="control-label">Nombre Usuario</label>
        <input asp-for="@Model.NickName" class="form-control"/>
        <span asp-validation-for="@Model.NickName" class="text-danger"></span>
    </div>
    

    <!--Cant piezas-->
    <div class="form-group">
        <label asp-for="@Model.CantPieces" class="">Cantidad Piezas</label>
        <select asp-for="@Model.CantPieces" class="form-control">
            <option value="" selected>Seleccionar cantidad</option>
            <option value="9">9</option>
            <option value="16">16</option>
            <option value="25">25</option>
        </select>
        <span asp-validation-for="@Model.CantPieces" class="text-danger"></span>
    </div>

    <!--Limite de participantes-->
    <div class="form-group">
        <label asp-for="@Model.LimiteParticipantes" class="">Límite de particpantes</label>
        <select asp-for="@Model.LimiteParticipantes" class="form-control">
            <option selected>Seleccionar límite</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="@Model.LimiteParticipantes" class="text-danger"></span>
    </div>
    
    <!--Pin-->
    <div class="form-group">
        <label asp-for="@Model.Pin" class="control-label">Pin</label>
        <input asp-for="@Model.Pin" class="form-control"/>
        <span asp-validation-for="@Model.Pin" class="text-danger"></span>
    </div>
    <div class="form-group row mt-4">
        <div class="col-lg-12">
            <input type="submit" value="Crear" class="btn btn-primary col-md-2 float-star" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary col-md-2 float-end">Ir a ingresar a una sala</a>
        </div>
        
    </div>
    
    <div class="@ViewBag.Classes"><span>@ViewBag.Message</span></div>
</form>